@model TipCalcModel
@{
    ViewBag.Title = "Tip Calculator";
}
<h1>Tip Calculator</h1>

<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="MealCost">
            Cost of Meal:
        </label>
        <input asp-for="MealCost" />
    </div>
    <div>
        <label>
            15% Tip:
        </label>
        <label>@ViewBag.Tip15.ToString("C2")</label>
    </div>
    <div>
        <label>
            20% Tip:
        </label>
        <label>@ViewBag.Tip20.ToString("C2")</label>
    </div>
    <div>
        <label>
            25% Tip:
        </label>
        <label>@ViewBag.Tip25.ToString("C2")</label>
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>
</form>
